<section class="gew_sectionContent-smallPadding container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Golden Eagle International</h2>
      {{{data.contact_text}}}
    </div>
    <div class="col-sm-6">
      <img src="/images/contact.jpg" alt="Contact" style="max-width: 100%" />
    </div>
  </div>
</section>


<section class="gew_sectionContent container">
  <div class="row">
    <div class="col-sm-6">
      <h3>Careers</h3>
      {{{data.careers}}}
      <br>
      <button class="btn btn-info gew_center">Current Vacancies</button>
    </div>
    <div class="col-sm-6  gew_contact-info">
      <h3>London</h3>
      {{{data.address}}}
      <div class="row">
        <div class="col-sm-6">
          <br>
          {{{data.contact_info}}}
        </div>
        <div class="col-sm-6">
          <br>
          <button class="btn btn-info gew_center">Meet the team</button>
        </div>
      </div>
      {{>subscribeFields color="dark"}}
    </div>
  </div>
</section>
