<section class="gew_sectionContent-smallPadding container">
  <div class="row">
    <div class="col-sm-4">
      <h2>Golden Eagle International</h2>
      {{{data.contact_text}}}
    </div>
    <div class="col-sm-2">
    </div>
    <div class="col-sm-6">
      <img
        srcset="{{srcSet 'contact_cxqdne.jpg'}}"
        sizes="(max-width: 768px) 100vw, 50vw"
        src="{{srcSet 'contact_cxqdne.jpg' 700}}"
        style="max-width: 100%" 
        alt="Contact"
      />
    </div>
  </div>
</section>


<section class="gew_sectionContent container">
  <div class="row">
    <div class="col-sm-4">
      <h3>Careers</h3>
      {{{data.careers}}}
      <br>
      <button class="btn btn-info btn-light">Current Vacancies</button>
    </div>
    <div class="col-sm-2">
    </div>
    <div class="col-sm-6  gew_contact-info">
      <h3>London</h3>
      {{{data.address}}}
      <div class="row">
        <div class="col-sm-6">
          <br>
          {{{data.contact_info}}}
        </div>
        <div class="col-sm-6">
          <br>
          <button class="btn btn-info btn-light">Meet the team</button>
        </div>
      </div>

      <div class="gew_contact-subscribe">
        {{>subscribeFields color="dark"}}
      </div>
    </div>
  </div>
</section>
