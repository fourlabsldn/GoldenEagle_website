<div class="gew_caseStudy">
  <div class="gew_caseStudy-leftCol">
    <img
      class="gew_background-cover"
      srcset="{{srcSet images.[0].url}}"
      sizes="(max-width: 768px) 100vw, 50vw"
      src="{{srcSet images.[0].url 700}}"
      alt="Property photo"
      style="z-index:0;"
    />
  </div>
  <div class="gew_caseStudy-rightCol">
    <h2>{{title}}</h2>
    <p class="gew_caseStudy-text">
      {{truncate short_description 400 "..."}}
    </p>
    <a class="btn btn-primary gew_caseStudy-moreInfoBtn">More Information</a>
  </div>
</div>
